<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <%- include("descript",{flag:flag,movieName: movieName}) %>
    <%- include meta %>
    <%- include("link",{flag:flag}) %>
    <script src="/public/javascripts/baiduAnalysis.js"></script>
</head>

<body>
    <!-- 头部 -->
    <div class="header-wp">
        <!-- 快速入口 -->
        <div class="hot-wp">
            <div class="wp hot clearfix">
                <div class="fl">
                    <span>热门电影: </span>
                    <%- include hotMovie%>
                </div>
            </div>
        </div>
        <div class="wp head">
            <!-- logo -->
            <div class="fl logo">
                <h1>
                    <a href="/" traget="_self">
                        <img src="/public/images/logo.jpg" alt="万寻资源网">
                    </a>
                </h1>

            </div>
            <div class="fr right" id="rightSearch">
                <div class="fast-nav-wp">
                    <div class="fast-nav">
                        <a href="/html/todaymovie" target="_self">今日最新电影</a>
                        <a href="/html/weekmovie" target="_self">近一周最新电影</a>
                        <a href="/" id="addSave" rel="sidebar">收藏本站</a>
                    </div>
                </div>
                <%- include search %>
                <!-- 小屏下的图标 -->
                <div id="menuIcon" class="menu-icon">
                    <b></b>
                    <b></b>
                    <b></b>
                </div>
            </div>
        </div>
    </div>
    <!-- 头部结束 -->
    <!-- 导航 -->
    <div id="indexNav" class="nav">
        <div class="wp">
            <%- include search %>
            <%- include menu %>
        </div>
    </div>
    <!-- 导航结束 -->
    <!-- 回顶部 -->
    <div id="goTop">
        <div class="top">
            <i class="iconfont iconhuidingbu"></i>
        </div>
    </div>
